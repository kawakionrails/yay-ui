<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Activity">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/gray</item>
    </style>

    <style name="Fragment">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/gray</item>
        <item name="android:padding">32dp</item>
    </style>

    <style name="Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/sfuidisplay_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Text.Title">
        <item name="android:fontFamily">@font/sfuidisplay_bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/sfuidisplay_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="EditText.Email">
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:maxLength">254</item>
    </style>

    <style name="EditText.Password">
        <item name="android:inputType">textPassword</item>
        <item name="android:maxLength">32</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/sfuidisplay_semibold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/rounded_black_background</item>
    </style>

    <style name="ImageView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

</resources>